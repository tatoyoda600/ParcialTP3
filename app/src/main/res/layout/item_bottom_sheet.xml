<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginTop="10sp"
        android:id="@+id/recycler"
        app:layoutManager="com.google.android.material.carousel.CarouselLayoutManager"/>



    <ImageView
        android:id="@+id/round_remove_image_view"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/button_onoff_indicator_off" />
    <LinearLayout
        android:id="@+id/linearLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Columna de la izquierda (linearLayoutLeft) -->
        <LinearLayout
            android:id="@+id/linearLayoutLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Fila 1 de la columna de la izquierda -->
            <TextView
                android:id="@+id/dog_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20dp" />

            <!-- Fila 2 de la columna de la izquierda -->
            <TextView
                android:id="@+id/dog_ubication_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicacion"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Columna de la derecha -->
        <TextView
            android:id="@+id/dog_age_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edad"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Primer CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="sex"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>

        <!-- Segundo CardView -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/eeee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Peso"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_user_pic_image_view"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:background="#62B87A"
            android:src="@android:drawable/ic_menu_myplaces"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Fila 1 de la columna de la izquierda -->
            <TextView
                android:id="@+id/dog_owner_text_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20dp" />

            <!-- Fila 2 de la columna de la izquierda -->
            <TextView
                android:id="@+id/dog_owner_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del dueÃ±o"
                android:textSize="10sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/phone_pic_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#A557FD"
            android:src="@android:drawable/stat_sys_phone_call"/>
    </LinearLayout>
    <TextView
